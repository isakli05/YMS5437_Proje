
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Proje.Model.Model.Entities.AppUser>


<div class="col-md-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Adres</th>
                <th>Rol</th>
                <th>Fotoğraf</th>
                <th colspan="2">Güncelle/Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.LastName</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Role.ToString()</td>
                    <td>
                        <img src="@item.ImagePath" style="display:block" width="30" height="30" />
                    </td>
                    <td>
                        <a href="/Admin/AppUser/Update/@item.ID">Güncelle</a>
                        /
                        <a href="/Admin/AppUser/Delete/@item.ID">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


