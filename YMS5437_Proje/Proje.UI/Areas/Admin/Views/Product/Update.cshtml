
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Proje.Service.Service.DTO.ProductUpdateVM

<form action="/Admin/Product/Update" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <img class="img-rounded" src="@Model.Product.ImagePath" height="50" />
    </div>


    <div class="form-group">
        <label for="Name">Ürün Adı</label>
        <input type="text" name="Name" value="@Model.Product.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Name">Ürün Fiyatı</label>
        <input type="text" name="Price" value="@Model.Product.Price" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Name">Ürün Stok Miktarı</label>
        <input type="text" name="UnitsInStock" value="@Model.Product.UnitsInStock" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Name">Ürün Birimi</label>
        <input type="text" name="Quantity" value="@Model.Product.Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Name">Ürün Kategorisi</label>
        <select name="CategoryID" class="form-control">
            @foreach (var item in Model.Categories)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Name">Ürün Görseli Seçiniz</label>
        <input type="file" name="Image" class="form-control" />
    </div>

    <input type="hidden" name="ID" value="@Model.Product.ID" />
    <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
</form>


