
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model Proje.Service.Service.DTO.CategoryDTO

<form action="/Admin/Category/Update" method="post">

    <div class="form-group">
        <label for="Name">Kategori Adı</label>
        <input type="text" value="@Model.Name" name="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Name">Kategori Açıklaması</label>
        <input type="text" value="@Model.Description" name="Description" class="form-control" />
    </div>

    @Html.HiddenFor(x=>x.ID)

    <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
</form>