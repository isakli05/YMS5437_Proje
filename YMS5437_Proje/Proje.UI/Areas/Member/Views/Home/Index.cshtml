@model IEnumerable<Proje.Model.Model.Entities.Category>
@{
    ViewBag.Title = "Index";
}
<div class="row" style="margin-top:50px;">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-lg-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(item.Name, "Index", "Product", new { id = item.ID }, new { @style = "color:firebrick" })
                                </td>
                                <td>
                                    @item.Description
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


